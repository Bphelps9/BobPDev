<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>Account</field>
        <field>ARC_Opportunity_ID__c</field>
        <field>All_Opportunity_Numbers__c</field>
        <field>Reason_for_Exception__c</field>
        <field>Reason_for_Exception_Date__c</field>
        <field>Need_By_Date__c</field>
        <field>Do_we_have_all_details_to_ship__c</field>
        <field>When_will_we_have_all_details_to_ship__c</field>
        <field>Do_we_have_the_PO__c</field>
        <field>When_do_we_expect_to_have_the_PO__c</field>
        <field>Number_of_Schools__c</field>
        <field>Will_the_opportunity_s_need_to_be_split__c</field>
        <field>Split_Description__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>EX_Waiting_on_to_Sales_Op_Leader</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>RVPs must approve all exceptions</description>
        <label>RVP Approval of Exception</label>
        <name>RVP_Approval_of_Exception</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>angela.choi@americanreading.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>If the Need By Date is within 4 weeks, exception request must be approved by Sales Ops Leadership</description>
        <entryCriteria>
            <formula>Need_By_Date__c &lt;= today()+28</formula>
        </entryCriteria>
        <label>Sales Ops Leadership Approval</label>
        <name>Sales_Ops_Leadership_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval to Sales Op Leadership and RVPs to approve moving forward with exception</description>
    <emailTemplate>unfiled$public/ARC_MaterialsException_EmailToApprover</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3)</booleanFilter>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Materials Exception Case</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Pending</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DP_Alert_to_Proceed</name>
            <type>Alert</type>
        </action>
        <action>
            <name>EX_Approval_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EX_Waiting_On_to_DP_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>EX_Approval_Status_to_Not_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EX_Waiting_On_to_Empty</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Exception_Not_Approved_Email</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>EX_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EX_Waiting_On_to_RVP</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Materials Exception Case</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Regional_Vice_President__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>EX_Remove_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EX_Remove_Waiting_On_Recall</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
