<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Owner</field>
        <field>RecordType</field>
        <field>ARC_Opportunity_ID__c</field>
        <field>All_Opportunity_Numbers__c</field>
        <field>Do_we_have_the_PO__c</field>
        <field>Reason_for_Exception__c</field>
        <field>Reason_for_Exception_Date__c</field>
        <field>Reason_Details__c</field>
        <field>Requested_Provision_Date__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>DIGEX_Waiting_on_to_Digital_Ops_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>RVP Approval of Digital Exception</label>
        <name>RVP_Approval_of_Digital_Exception</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ashley.bergh@americanreading.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Digital Ops Approval of Exception</label>
        <name>Digital_Ops_Approval_of_Exception</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval to Digital Ops Leadership and RVPs to approve moving forward with digital exception</description>
    <emailTemplate>unfiled$public/ARC_DigitalException_EmailToApprover</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3)</booleanFilter>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Digital Exception Case</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Pending</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>DIGEX_Approval_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DIGEX_Waiting_on_to_DP</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DP_Alert_to_Create_Sales_Order</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DIGEX_Approval_Status_to_Not_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DIGEX_Not_Approved_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>DIGEX_Waiting_on_to_Empty</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>DIGEX_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DIGEX_Waiting_on_to_RVP</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Digital Exception Case</label>
    <processOrder>3</processOrder>
    <recallActions>
        <action>
            <name>DIGEX_Remove_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>DIGEX_Remove_Waiting_On_Recall</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
